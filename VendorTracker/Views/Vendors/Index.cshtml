@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name<br><h4>@vendor.Address</h4></a></h3>
}

<p><a href='/'>Back home</a></p>